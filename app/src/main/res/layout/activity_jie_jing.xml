                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="息烽县"
                    android:textColor="#282828"
                    />
                <CheckBox 
                    android:id="@+id/wdq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乌当区"
                    android:textColor="#282828"
                    />
              
                </LinearLayout>
                 <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >
                   <CheckBox 
                    android:id="@+id/qzs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清镇市"
                    android:textColor="#282828"
                    />
                <CheckBox 
                    android:id="@+id/xwx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修文县"
                    android:textColor="#282828"
                    />
                
               

                    <CheckBox
                        android:id="@+id/kyx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开阳县"
                        android:textColor="#282828" />

                    <CheckBox
                        android:id="@+id/hxq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
