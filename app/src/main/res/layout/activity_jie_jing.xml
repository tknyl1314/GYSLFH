                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="接警信息填写"
                android:textColor="@android:color/black"
                android:textSize="22sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/jiejing_imgBtn_upSure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/button"
            android:src="@drawable/tijao" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#cbcbcb" />

    <LinearLayout
        style="@drawable/linelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/linelayout" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp" >

            <TextView
                android:layout_width="155dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="接警编号:"
                android:textColor="#282828"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/jiejing_bianhao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:background="@drawable/edittextstyle"
                android:gravity="left|center"
                android:textColor="@color/balck"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp" >

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="接警来源:"
                android:textColor="#282828"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="*"
                android:textColor="#ff0000" />

            <Spinner
                android:id="@+id/huojing_resource"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
             android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp" >

            <TextView
                android:layout_width="155dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="接警时间:"
                android:textColor="#282828"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/jiejing_time_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:background="@drawable/edittextstyle"
                android:gravity="left|center"
                android:textColor="@color/balck"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
             android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp" >

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="疑似火情地址:"
                android:textColor="#282828"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="*"
                android:textColor="#ff0000" />

            <EditText
                android:id="@+id/jiejing_huojing_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:textColor="@color/balck"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
             android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp" >

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="报警电话:"
                android:textColor="#282828"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="*"
                android:textColor="#ff0000" />

            <EditText
                android:id="@+id/jiejing_tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:textColor="@color/balck"
                android:textSize="18sp" />
        </LinearLayout>

