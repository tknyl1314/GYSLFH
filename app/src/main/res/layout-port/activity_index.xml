<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
<com.esri.android.map.MapView
    android:id="@+id/mapview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
</com.esri.android.map.MapView>
    <EditText
        android:id="@+id/main_et"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/main_button_shape"
        android:hint=""
        android:paddingLeft="15dp"
        />
    <ImageView
        android:id="@+id/main_iv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/main_et"
        android:layout_alignEnd="@+id/main_et"
        android:layout_alignTop="@+id/main_et"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/main_search" />

    <ImageView
        android:id="@+id/main_iv_layer"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignRight="@+id/main_et"
        android:layout_alignEnd="@+id/main_et"
        android:layout_below="@+id/main_et"
        android:layout_marginTop="20dp"
        android:background="@drawable/main_button_shape"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/layers" />


    <ImageView
        android:id="@+id/main_iv_more"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/main_more"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/main_button_shape"
        android:layout_alignRight="@id/main_iv_layer"
        android:layout_alignEnd="@+id/main_iv_layer"
        android:layout_below="@+id/main_iv_layer"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/main_iv_locate"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignLeft="@id/main_et"
        android:layout_alignStart="@+id/main_et"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:background="@drawable/main_button_shape"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/locate" />

    <include
        android:id="@+id/main_bot"
        layout="@layout/activity_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>