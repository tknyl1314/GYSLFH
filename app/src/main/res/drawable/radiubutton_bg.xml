<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="true"><layer-list>
            <item><shape>
                    <gradient android:angle="270" android:endColor="#a0e0b071" android:startColor="#a0a67637" />

                    <stroke android:width="1dp" android:color="#5c3708" />

                    <corners android:radius="5dp" />

                    <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                </shape></item>
        </layer-list></item>
    <item android:state_checked="true"><layer-list>
            <item><shape>
                    <solid android:color="@color/gray" />

                    <stroke android:width="1dp" android:color="@color/gray" />

                    <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
                </shape></item>
        </layer-list></item>
    <item><layer-list>
            <item><shape>
                    <solid android:color="@color/white" />

                    <stroke android:width="1dp" android:color="@color/gray" />

                    <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
                </shape></item>
        </layer-list></item>

</selector>