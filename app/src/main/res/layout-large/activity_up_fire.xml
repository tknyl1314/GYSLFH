<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UpFireActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/fireinfo_returnBtn"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/dialog_exit_buttonstyle"
            android:src="@drawable/btn_return" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="火警上报"
                android:textColor="@android:color/black"
                android:textSize="22sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/fireinfo_imgBtn_upSure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/button"
            android:src="@drawable/tijao" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="50dp"
        android:background="#cbcbcb" />
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1">
        
  
    <RelativeLayout
        style="@drawable/solid"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/linelayout" >

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="市:"
                android:textColor="#282828"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/city_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:text="贵阳市"
                android:textColor="@color/balck"
                android:textSize="18sp" />

            <TextView
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="县:"
                android:textColor="#282828"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="*"
                android:textColor="#ff0000" />

            <Spinner
                android:id="@+id/county_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
               
                android:background="@drawable/edittextstyle"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/layout2"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="镇:"
                android:textColor="#282828"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="*"
                android:textColor="#ff0000" />

            <EditText
                android:id="@+id/town_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:textCursorDrawable="@null"
                android:textColor="@color/balck"
                android:textSize="18sp" />

            <TextView
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="村:"
                android:textColor="#282828"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="*"
                android:textColor="#ff0000" />

            <EditText
                android:id="@+id/viliage_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:textColor="@color/balck"
                android:textCursorDrawable="@null"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/layout3"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="经度:"
                android:textColor="#282828"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="*"
                android:textColor="#ff0000" />

            <EditText
                android:id="@+id/longitude"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:textColor="@color/balck"
                android:textSize="18sp" />

            <TextView
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="纬度:"
                android:textColor="#282828"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="*"
                android:textColor="#ff0000" />

            <EditText
                android:id="@+id/latitude"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:textColor="@color/balck"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/layout4"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >
             <TextView
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="类型:"
                android:textColor="#282828"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="*"
                android:textColor="#ff0000" />

            <Spinner
                android:id="@+id/firetype"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:textSize="18sp" />
            <TextView
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="状态:"
                android:textColor="#282828"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="*"
                android:textColor="#ff0000" />

            <Spinner
                android:id="@+id/fireState"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:textSize="18sp" />
            
          
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout6"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/layout5"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="地点:"
                android:textColor="#282828"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="*"
                android:textColor="#ff0000" />

<!--             <EditText
                android:id="@+id/huozai_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:textColor="@color/balck"
                android:textSize="18sp" >

                <requestFocus />
            </EditText> -->
            
            <EditText
                android:id="@+id/huozai_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:background="@drawable/edittextstyle"
                android:textColor="@color/balck"
                   android:textCursorDrawable="@null"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout7"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/layout6"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="74dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="开始:"
                android:textColor="#282828"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="*"
                android:textColor="#ff0000" />

            <TextView
                android:id="@+id/startTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:background="@drawable/edittextstyle"
                android:gravity="left|center"
                android:textColor="@color/balck"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout8"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/layout7"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="结束:"
                android:textColor="#282828"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/endTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:background="@drawable/edittextstyle"
                android:gravity="left|center"
                android:hint="点击选择结束时间"
                android:textColor="@color/balck"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/layout8"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="备注:"
                android:textColor="#282828"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:background="@drawable/edittextstyle"
                android:textColor="@color/balck"
                   android:textCursorDrawable="@null"
                android:textSize="18sp" />
        </LinearLayout>

      <!--   <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout2"
            android:visibility="gone"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="是否通知市级用户:"
                android:textColor="#282828"
                android:textSize="22sp" />

            <CheckBox
                android:id="@+id/isUpSJ"
                android:layout_width="wrap_content"
