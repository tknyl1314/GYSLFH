<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
   <data>
       <import type="android.view.View"/>
       <variable
           name="viewmodel"
           type="com.titan.gyslfh.alarminfo.AlarmInfoItemViewModel"/>
   </data>
    <android.support.v7.widget.CardView
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{()->viewmodel.onAlarmInfoClicked()}">
        <RelativeLayout
            android:padding="8dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_time"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text='@{@string/alarminfo_time+viewmodel.time}'
            />
            <TextView
                android:layout_below="@+id/tv_time"
                android:id="@+id/tv_origin"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
            android:text='@{@string/alarminfo_orgin+viewmodel.origin}'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_status"
                android:layout_below="@+id/tv_time"
                android:layout_toRightOf="@+id/tv_origin"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
            android:text='@{@string/alarminfo_state+viewmodel.isfire}'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_address"
                android:layout_below="@+id/tv_origin"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text='@{@string/alarminfo_address+viewmodel.address}'
            android:lines="1"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>