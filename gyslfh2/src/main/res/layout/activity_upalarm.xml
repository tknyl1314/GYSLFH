<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <data>
        <!--<variable
            name="viewModel"
            type="com.titan.viewmodel.UpInfoViewModel"/>-->
        <variable
            name="uploadinfo"
            type="com.titan.model.UploadInfo"/>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/activity_up_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            tools:context="com.titan.forestranger.UpAlarmActivity">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/uptype"/>
                <Spinner
                    android:id="@+id/sp_uptype"
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="30dp"
                    android:entries="@array/upalarmtype">
                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/title"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/style_edittext"
                    android:text="@{uploadinfo.TITLE}"
                    android:hint="输入标题"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <EditText
                    android:id="@+id/et_describe"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="top"
                    android:lines="3"
                    android:text="@{uploadinfo.DESCRIBE}"
                    android:background="@drawable/style_edittext"
                    android:hint="描述信息"/>
            </RelativeLayout>
            <HorizontalScrollView
                android:id="@+id/hsc"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                >
                <LinearLayout
                    android:id="@+id/ll_imgs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_camera"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:onClick="openGallery"
                        app:srcCompat="@drawable/ic_camera_alt_black_24dp"/>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdv_imgview1"
                        android:layout_width="60dp"
                        android:layout_height="match_parent" />
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdv_imgview2"
                        android:layout_width="60dp"
                        android:layout_height="match_parent" />
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdv_imgview3"
                        android:layout_width="60dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/remark"/>
                <EditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="top"
                    android:background="@drawable/style_edittext"
                    android:text="@{uploadinfo.REMARK}"
                    android:hint="添加备注"/>

            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/submit"
                android:text="@string/upalarm"
                android:textSize="18sp"
                android:onClick="onAlarm"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
    </ScrollView>

</layout>